# Solution AI - Production Environment Configuration
# This file contains all production environment variables
# Copy this to .env and update with your actual values

# ==========================================
# APPLICATION SETTINGS
# ==========================================
APP_NAME=Solution AI
VERSION=1.0.0
ENVIRONMENT=production
LOG_LEVEL=INFO

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://solution_user:YOUR_DB_PASSWORD@solution-ai-db.xxxxxx.us-east-1.rds.amazonaws.com:5432/solution_ai

# Database Connection Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_RECYCLE=300

# ==========================================
# REDIS CONFIGURATION
# ==========================================
# Redis URL for caching and rate limiting
REDIS_URL=redis://solution-ai-redis.xxxxxx.ng.0001.use1.cache.amazonaws.com:6379

# Redis Connection Settings
REDIS_POOL_SIZE=20
REDIS_DB=0

# ==========================================
# AI PROVIDER CONFIGURATION
# ==========================================
# OpenAI API Configuration
OPENAI_API_KEY=sk-your-production-openai-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=200
OPENAI_TEMPERATURE=0.1

# Anthropic API Configuration (Fallback)
ANTHROPIC_API_KEY=sk-ant-your-production-anthropic-key-here
ANTHROPIC_MODEL=claude-3-haiku-20240307
ANTHROPIC_MAX_TOKENS=200
ANTHROPIC_TEMPERATURE=0.1

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
# JWT Configuration
SECRET_KEY=your-super-secure-random-secret-key-here-64-characters-minimum
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Key Configuration
ALLOWED_API_KEYS=prod_key_1,prod_key_2,prod_key_3,prod_key_4,prod_key_5

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# ==========================================
# STRIPE PAYMENT CONFIGURATION
# ==========================================
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret-here

# Stripe Pricing IDs (update with your actual price IDs)
STRIPE_PRICE_STARTER=price_your_starter_price_id
STRIPE_PRICE_PROFESSIONAL=price_your_professional_price_id
STRIPE_PRICE_ENTERPRISE=price_your_enterprise_price_id

# ==========================================
# EMAIL CONFIGURATION
# ==========================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=noreply@solutionai.com
SMTP_PASSWORD=your-smtp-password-here
FROM_EMAIL=noreply@solutionai.com
FROM_NAME=Solution AI

# ==========================================
# MONITORING & OBSERVABILITY
# ==========================================
# Jaeger Tracing
JAEGER_HOST=jaeger.solution-ai.com
JAEGER_PORT=6831
ENABLE_TRACING=true

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=86400
BURST_LIMIT=100

# ==========================================
# CACHING CONFIGURATION
# ==========================================
ENABLE_CACHING=true
CACHE_TTL=3600
CACHE_PREFIX=solution_ai

# ==========================================
# FILE UPLOAD CONFIGURATION
# ==========================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,txt,doc,docx,csv,json

# ==========================================
# BACKUP CONFIGURATION
# ==========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=solution-ai-backups

# ==========================================
# SECURITY HEADERS
# ==========================================
# Content Security Policy
CSP_DEFAULT_SRC=self
CSP_SCRIPT_SRC=self 'unsafe-inline' 'unsafe-eval' https://js.stripe.com
CSP_STYLE_SRC=self 'unsafe-inline' https://fonts.googleapis.com
CSP_FONT_SRC=https://fonts.gstatic.com
CSP_IMG_SRC=self data: https:
CSP_CONNECT_SRC=self https://api.stripe.com

# HTTPS Strict Transport Security
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# ==========================================
# COMPLIANCE SETTINGS
# ==========================================
# GDPR Compliance
DATA_RETENTION_DAYS=2555
USER_CONSENT_REQUIRED=true
DATA_EXPORT_ENABLED=true

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555

# ==========================================
# PERFORMANCE SETTINGS
# ==========================================
# Gunicorn Configuration
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# ==========================================
# EXTERNAL INTEGRATIONS
# ==========================================
# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#alerts

# PagerDuty Integration
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_BETA_FEATURES=false
ENABLE_DEBUG_MODE=false
ENABLE_MAINTENANCE_MODE=false

# ==========================================
# THIRD-PARTY API KEYS
# ==========================================
# Add any additional third-party service API keys here
# Example:
# SENDGRID_API_KEY=your-sendgrid-api-key
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token

# ==========================================
# DOMAIN & URL CONFIGURATION
# ==========================================
FRONTEND_URL=https://app.solutionai.com
BACKEND_URL=https://api.solutionai.com
DOCS_URL=https://docs.solutionai.com

# ==========================================
# ADMIN CONFIGURATION
# ==========================================
ADMIN_EMAIL=admin@solutionai.com
ADMIN_PASSWORD=CHANGE_THIS_IMMEDIATELY_IN_PRODUCTION
ADMIN_API_KEY=admin_super_secret_key_change_this

# ==========================================
# MAINTENANCE SETTINGS
# ==========================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Solution AI is currently undergoing maintenance. We'll be back soon!"

# ==========================================
# LEGAL & COMPLIANCE
# ==========================================
PRIVACY_POLICY_URL=https://solutionai.com/privacy
TERMS_OF_SERVICE_URL=https://solutionai.com/terms
COOKIE_POLICY_URL=https://solutionai.com/cookies

# ==========================================
# ANALYTICS & TRACKING
# ==========================================
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your-mixpanel-token
HOTJAR_ID=your-hotjar-id

# ==========================================
# ERROR TRACKING
# ==========================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ROLLBAR_ACCESS_TOKEN=your-rollbar-token

# ==========================================
# CDN CONFIGURATION
# ==========================================
CDN_URL=https://cdn.solutionai.com
CDN_ENABLED=true

# ==========================================
# LOAD BALANCER HEALTH CHECKS
# ==========================================
HEALTH_CHECK_PATH=/health/
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=60

# ==========================================
# AUTO SCALING CONFIGURATION
# ==========================================
AUTO_SCALING_ENABLED=true
AUTO_SCALING_MIN_INSTANCES=2
AUTO_SCALING_MAX_INSTANCES=10
AUTO_SCALING_CPU_THRESHOLD=70
AUTO_SCALING_MEMORY_THRESHOLD=80

# ==========================================
# DATABASE BACKUP CONFIGURATION
# ==========================================
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE=0 3 * * *
DB_BACKUP_RETENTION=30
DB_BACKUP_COMPRESSION=true

# ==========================================
# LOG AGGREGATION
# ==========================================
LOG_AGGREGATION_ENABLED=true
LOG_AGGREGATION_SERVICE=cloudwatch
LOG_GROUP_NAME=/ecs/solution-ai
LOG_STREAM_PREFIX=ecs

# ==========================================
# ALERTING CONFIGURATION
# ==========================================
ALERT_EMAIL=alerts@solutionai.com
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_PAGERDUTY_KEY=your-pagerduty-key

# ==========================================
# BUSINESS METRICS
# ==========================================
METRICS_ENABLED=true
METRICS_RETENTION_DAYS=90
METRICS_AGGREGATION_INTERVAL=1h

# ==========================================
# END OF CONFIGURATION
# ==========================================
# Remember to:
# 1. Change all default passwords and keys
# 2. Use strong, unique secrets for production
# 3. Enable encryption for sensitive data
# 4. Set up proper access controls
# 5. Configure monitoring and alerting
# 6. Test thoroughly before going live